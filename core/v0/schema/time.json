{
    "$id": "time.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Describes time in its various forms. It can be a single point in time; duration; or a structured timetable of operations",
    "type": "object",
    "properties": {
        "label" : {
            "type" : "string"
        },
        "timestamp" : {
            "type": "string",
            "format": "date-time"
        },
        "duration" : {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/core-v0.9.0/core/v0/schema/duration.json"
        },
        "range" : {
            "type": "object",
            "properties": {
                "start" : {
                    "type": "string",
                    "format": "date-time"
                },
                "end" : {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "days" : {
            "type" : "string",
            "description": "comma separated values representing days of the week",
            "examples": [
                "mon,tue,wed,thu,fri",
                "mon,wed,fri",
                "sat,sun"
            ]
        }
    }
}