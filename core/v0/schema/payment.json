{
    "$id": "payment.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Describes a payment",
    "type": "object",
    "properties": {
        "transaction_id" : {
            "type" : "string",
            "description": "Transaction ID of the payment"
        },
        "type" : {
            "type":"string",
            "enum": ["ON-ORDER", "PRE-FULFILLMENT", "ON-FULFILLMENT","POST-FULFILLMENT"]
        },
        "payee" : {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/core-v0.9.0/core/v0/schema/payment_endpoint.json"
        },
        "amount" : {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/core-v0.9.0/core/v0/schema/monetary_value.json"
        },
        "state" : {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/core-v0.9.0/core/v0/schema/state.json"
        },
        "due_date" : {
            "type" : "string",
            "format": "date-time"
        },
        "duration" : {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/core-v0.9.0/core/v0/schema/duration.json"
        }
    }
}