{
    "$id": "add_on.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Describes an add-on",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "ID of the add-on. This follows the syntax {item.id}/add-on/{add-on unique id} for item specific add-on OR ",
            "examples" : [
                "example-pizzeria@example-bpp.com/item/original-margherita/add-on/extra-cheese",
                "example-gift-shop@example-bpp.com/add-on/gift-wrap"
            ]
        },
        "descriptor" : {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/core-0.9.0/core/v0/schema/descriptor.json"
        },
        "price" : {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/core-0.9.0/core/v0/schema/price.json"
        }
    }
}